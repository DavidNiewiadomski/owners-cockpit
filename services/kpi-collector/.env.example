# KPI Collector Service Configuration

# Service Configuration
KPI_COLLECTOR_PORT=3001
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Procore API Configuration
PROCORE_CLIENT_ID=your-procore-client-id
PROCORE_CLIENT_SECRET=your-procore-client-secret
PROCORE_BASE_URL=https://sandbox.procore.com
PROCORE_COMPANY_ID=your-default-company-id

# Scheduling Configuration
CRON_SCHEDULE=0 2 * * *
TIMEZONE=America/New_York

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/kpi-collector.log

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_MS=5000

# Performance Configuration
REQUEST_TIMEOUT_MS=30000
BATCH_SIZE=10
